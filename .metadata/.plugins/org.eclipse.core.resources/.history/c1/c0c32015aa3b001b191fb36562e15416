package ejercicio12;

import java.util.Scanner;


public class test {
	
	public static void main(String[] args) {
		
		Scanner sc =new Scanner(System.in);
		
		System.out.println("Escribe el nombre del empleado");
	       String nombre = sc.nextLine();
	        
	     empleadoYSueldo empleado1 = new empleadoYSueldo("Antonio", 40, 0, 1000);
	  
	         
	     empleadoYSueldo empleado2 = new empleadoYSueldo("Manolo", 40, 0, 1000);
	   
	     
	     empleadoYSueldo empleado3 = new empleadoYSueldo("Álvaro", 40, 0, 1000);
	     
	     
	    	if(nombre=="Antonio") {
	    	 empleado1.sueldo();
	     }else if (nombre=="Manolo"){
	    	 empleado2.sueldo();
	     }else if (nombre=="Álvaro") {
	    	 empleado3.sueldo();
	     }else {
	    	 System.out.println("Esa persona no es un empleado");
	     } 
	     
	     sc.close();
	     
	}
	

}
